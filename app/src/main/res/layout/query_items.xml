<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/relative"
     >

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起飞地点："
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="航班：" />

    <TextView
        android:id="@+id/fligthName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="f1"
        android:layout_toLeftOf="@+id/textView13"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/startPlace"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fligthName"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="p1" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到达地点："
        android:layout_alignBaseline="@+id/startPlace"
        android:layout_alignBottom="@+id/startPlace"
        android:layout_toLeftOf="@+id/endPlace"
        android:layout_toStartOf="@+id/endPlace" />

    <TextView
        android:id="@+id/endPlace"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="p2"
        android:layout_marginRight="67dp"
        android:layout_marginEnd="67dp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:text="起飞时间：" />

    <TextView
        android:id="@+id/startTime"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="t1"
        android:layout_below="@+id/startPlace"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到达时间："
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/endTime"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="t2"
        android:layout_below="@+id/startTime"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="票价："
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ticketPrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="m"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toRightOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余票数："
        android:layout_below="@+id/endTime"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:id="@+id/ticketRemaining"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignRight="@+id/endTime"
        android:layout_alignEnd="@+id/endTime" />


</RelativeLayout>
